{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node"],
    "target": "ES2015",
    "lib": ["ES2020"],
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noFallthroughCasesInSwitch": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "declaration": false,
    "downlevelIteration": false,
    "importHelpers": false
  },
  "exclude": ["node_modules"],
  "files": ["index.ts", "tests.ts"]
}
